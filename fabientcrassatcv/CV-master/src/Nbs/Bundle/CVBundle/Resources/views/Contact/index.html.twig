{% extends "NbsCVBundle:Contact:base.html.twig" %}

{% trans_default_domain 'MremiContactBundle' %}

{% form_theme form 'MremiContactBundle:Contact:bootstrap_form_theme.html.twig' %}

{% block title %}{{ 'mremi_contact.form_page_title'|trans }}{% endblock %}

{% block body %}
    <section class="well well-large" style="margin-top:20px;">
    {{ form_start(form, {'action': path('mremi_contact_form')}) }}
        <fieldset>
            <legend>{{ 'mremi_contact.form_title'|trans }}</legend>

            {{ form_widget(form) }}
        </fieldset>
    {{ form_end(form) }}

    <a href="{{ path('fabiencrassat_curriculumvitae_default', {
        '_locale':app.request.get('_locale'),
        'cvxmlfile':app.request.get('cvxmlfile')}) }}" class="btn btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span> {{ 'Nbs_contact.back_button'|trans({}, 'NbsCVBundle') }}
    </a>
    </section>
{% endblock body %}
